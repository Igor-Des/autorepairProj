@model autorepairProj.Models.Payment

@{
    ViewData["Title"] = "Добавление нового платежа";
}

<h1>Создание</h1>

<h4>Платеж</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label">Гос. номер авто</label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MechanicId" class="control-label">Фамилия механика</label>
                <select asp-for="MechanicId" class ="form-control" asp-items="ViewBag.MechanicId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProgressReport" class="control-label"></label>
                <input asp-for="ProgressReport" class="form-control" />
                <span asp-validation-for="ProgressReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку всех платежей</a>
</div>

